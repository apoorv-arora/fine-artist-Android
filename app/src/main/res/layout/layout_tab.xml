<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabView"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tab_feedback" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:gravity="center">

        <in.fine.artist.home.utils.views.TextViewMedium
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/height12"
            android:gravity="center"
            android:textColor="@color/white"/>

        <in.fine.artist.home.utils.views.CircularTextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/height10"
            android:gravity="center"
            android:layout_marginLeft="@dimen/height6"
            android:padding="@dimen/height3"
            android:textColor="@color/white"
            android:visibility="gone"/>

    </LinearLayout>

    <View
        android:id="@+id/tabLayout_selector"
        android:layout_width="@dimen/height70"
        android:layout_height="@dimen/height4"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:background="@color/transparent1"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>