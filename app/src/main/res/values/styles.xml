<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="Widget.GifMoviewView" parent="@android:style/Widget"/>

    <style name="roundedButton" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/size14</item>
        <item name="android:background">@drawable/rounded_button_grey</item>
        <item name="android:layout_marginLeft">@dimen/size12</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColorHint">@color/suggested_destination_background</item>
        <item name="android:paddingLeft">@dimen/size8</item>
        <item name="android:paddingRight">@dimen/size8</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/height6</item>
        <item name="android:paddingBottom">@dimen/height6</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
    </style>

</resources>
